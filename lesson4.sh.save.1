#!/bin/bash

clear

NAME="Bablu Kumar"
# IP Address
IP=`ifconfig | grep 'broadcast' | awk '{print $2}'`

# Interface
INTFCE=`ifconfig | grep 'enp' | awk '{print $1}' | cut -d ':' -f1`

echo "Name:" $NAME
echo "IP:" $IP
echo "Interface:" $INTFCE

# Check Internet connectivity with Google
FASTEST_CONN=`ping google.com -c 10 | grep 'time=' | awk '{print $8}' | cut -d "=" -f2 | sort | head -n 1`
SLOWEST_CONN=`ping google.com -c 10 | grep 'time=' | awk '{print $8}' | cut -d "=" -f2 | sort | tail -n 1`

echo "Checking your internet connectivity..."echo "Checking your internet connectivity..."
echo "Fastest Connectivity:" $FASTEST_CONN
echo "Slowest Connectivity:" $SLOWEST_CONN
